{
    "cmake":{
        "root_dir": "cmake_project",
        "properties": [
            {
                "name": "Name of the project",
                "token": "project_name"
            },
            {
                "name": "Installation prefix for 'make install' ",
                "token": "install_prefix",
                "default":"/usr/local/"
            },
            {
                "name": "Init git",
                "token" : "git",
                "y_n": true
            },
            {
                "name": "Licens",
                "token": "lic",
                "choice": ["GPL", "MIT"]
            }
        ],
    },
    "beamer":{
        "root_dir": "beamer_presentation",
        "properties": [
            {
                "name": "Name of the project",
                "token": "project_name"
            },
            {
                "name": "Author of the project",
                "default":"Stanislav Arnaudov",
                "token": "author_name"
            },
            {
                "name": "Title",
                "token": "title"
            },
            {
                "name": "Subtitle",
                "token": "subtitle",
                "default":" "
            },
            {
                "name": "Institute or Organisation",
                "token": "institute",
                "default": "KIT - Karlsruher Institut FÃ¼r Technologie"
            }
        ]
    }
